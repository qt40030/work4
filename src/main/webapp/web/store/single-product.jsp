    function init() {
    	 var code='<%=request.getParameter("code")%>'
    	$.ajax({
    		url : "/work4/informationController/select2.do?code="+code,
    		dataType : 'json',
    		type : 'post',
    		success : function(data) {
    			var html = '';
    			$.each(data.goods, function(i, dom) {
    				$('#name').html(dom.name)
    				$('#name2').html(dom.name)
    				$('#price').html('￥'+dom.price)
    				$('#descr').html(dom.descr)
    				$('#inventory').html('库存：'+dom.inventory)
    				html+='<img src="/image/'+dom.url+'" alt="" style="width: 230px;;height: 250px;">'
    			});
    			 $("#img").html(html);
    		}
    	})
    }
    function join(){
    	 var code='<%=request.getParameter("code")%>'
    	$.ajax({
    		url:"/work4/cartController/insert.do",
    		data:{"usercode":'${usercode}',"goodscode":code,"num":$("#num").val()},
    		dataType:'json',
        	type:'post',
        	success : function(data) {
        		if(data==0){
        			alert("库存不足")
        		}else if(data==1){
        			alert("添加成功")
        		}else{
        			alert("添加失败")
        		}
        	}
    	})
    }
    function goLogout() {
		if(confirm("确定退出？")){
		$.ajax({
