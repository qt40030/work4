    function init() {
    	 var code='<%=request.getParameter("code")%>'
    	$.ajax({
    		url : "/work4/informationController/select2.do?belong="+code,
    		dataType : 'json',
    		type : 'post',
    		success : function(data) {
    			var html = '';
    			$.each(data.goods, function(i, dom) {
    				html+='<div class="col-md-3 col-sm-6"><div class="single-shop-product"><div class="product-upper"><img src="/image/'+dom.url+'" alt="" style="width: 200px;;height: 250px;"></div><h2><a href="/work4/web/store/single-product.jsp?code='+dom.code+'">'+dom.name+'&nbsp;&nbsp;</a></h2><div class="product-carousel-price"><ins>￥'+dom.price+'</ins></div><div class="product-option-shop"></div></div></div>';
    			});
    	 $("#row1").html(html);
    		}
    	})
    }
    
    function goLogout() {
		if(confirm("确定退出？")){
		$.ajax({
			url:"/work4/userController/logout.do",
			dataType:'text',
			type:'post',
